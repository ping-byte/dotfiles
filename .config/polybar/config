;click-left = ~/.config/polybar/scripts/powermenu.sh

; vim:ft=dosini

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-close = 
label-close-foreground = ${color.blue}
label-separator = |
format-foreground = ${color.blue}
;format-background = ${color.blue}
label-separator-foreground = ${color.blue}

menu-0-0 = 
menu-0-0-exec = betterlockscreen -l dimblur && sleep 1
menu-0-1 = 
menu-0-1-exec = systemctl reboot
menu-0-2 = 
menu-0-2-exec = betterlockscreen -l dimblur && sleep 1 && systemctl suspend
menu-0-3 = 
menu-0-3-exec = systemctl poweroff
